<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" >

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/payback_icon"
        android:label="@string/app_name"
        android:roundIcon="@drawable/payback_icon"
        android:supportsRtl="true"
        android:theme="@style/Theme.Frontend"
        android:usesCleartextTraffic="true"
        tools:targetApi="31" >
        <activity
            android:name=".ui.login.LoginView"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.Frontend.NoActionBar" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.createUser.CreateUserView"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.Frontend.NoActionBar" >
        </activity>
        <activity
            android:name=".ui.home.HomeView"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.Frontend.NoActionBar" >
        </activity>
        <activity
            android:name=".ui.notifications.NotificationsView"
            android:exported="true"
            android:theme="@style/Theme.Frontend.NoActionBar" >
        </activity>
        <activity
            android:name=".ui.createGroup.CreateGroupView"
            android:exported="true"
            android:theme="@style/Theme.Frontend.NoActionBar" >
        </activity>
        <activity
            android:name=".ui.profile.ProfileView"
            android:exported="true"
            android:theme="@style/Theme.Frontend.NoActionBar" >
        </activity>
        <activity
            android:name=".ui.Group.GroupView"
            android:exported="true"
            android:theme="@style/Theme.Frontend.NoActionBar" >
        </activity>
        <activity
            android:name=".ui.groupInfo.GroupInfoView"
            android:exported="true"
            android:theme="@style/Theme.Frontend.NoActionBar" >
        </activity>
    </application>

</manifest>